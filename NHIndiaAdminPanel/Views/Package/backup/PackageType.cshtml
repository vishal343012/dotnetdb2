
@{
    ViewBag.Title = "PackageType";
}


<div class="page-title">
    <h3 class="breadcrumb-header">Package Type</h3>
</div>
<div class="main-wrapper" ng-app="PackageTypeApp" ng-controller="PackageTypeController">
    <div class="row">
        <div class="col-md-3" id="scrollhere">
            <input class="form-control" [(ngModel)]="packageType.PackageTypeName" placeholder="PackageType Name" />
        </div>

        <div class="col-md-3">
            <button class="btn btn-primary" (click)="save()" [innerText]="packageType.PackageTypeId == 0 ? 'Create' : 'Update'"></button>
        </div>
        <div class="col-md-12">
            <br />
            <div class="panel panel-white">
                <div class="panel-heading clearfix">
                    <h4 class="panel-title">PackageType List</h4>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>PackageType</th>
                                    <th>Edit</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr *ngFor="let sn of packageTypeList; let i = index">
                                    <td>{{ i + 1 }}</td>
                                    <td>{{ sn.PackageTypeName }}</td>
                                    <td><a (click)="open(sn)" class="fa fa-edit"></a></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- Row -->
</div>
